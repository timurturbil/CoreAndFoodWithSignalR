@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="total-content">
    <div class="list_of_members">
        <div class="sales" style="background-color:#1abc9c">
            <div class="icon-text">
                <h3 id="totalFood">@ViewBag.totalFood</h3>
                <p>Total Food</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="new-users" style="background-color:#2ecc71">

            <div class="icon-text">
                <h3 id="totalCategory">@ViewBag.totalCategory</h3>
                <p>Total Category</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="orders" style="background-color:#3498db">

            <div class="icon-text">
                <h3 id="FruitCount">@ViewBag.FruitCount</h3>
                <p>Fruit Count</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="visitors" style="background-color:#9b59b6">

            <div class="icon-text">
                <h3 id="Vegetables">@ViewBag.Vegetables</h3>
                <p>Vegetable Count</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<div class="clearfix"></div>
<div class="total-content">
    <div class="list_of_members">
        <div class="sales" style="background-color:#f1c40f">
            <div class="icon-text">
                <h3 id="totalStock">@ViewBag.totalStock</h3>
                <p>Sum Food</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="new-users" style="background-color:#e67e22">

            <div class="icon-text">
                <h3 id="Legumes">@ViewBag.Legumes</h3>
                <p>Legumes Count</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="orders" style="background-color:#e74c3c">

            <div class="icon-text">
                <h3 id="MaxStockFood">@ViewBag.MaxStockFood</h3>
                <p>Max Stock Food</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="visitors" style="background-color:#95a5a6">

            <div class="icon-text">
                <h3 id="MinStockFood">@ViewBag.MinStockFood</h3>
                <p>Min Stock Food</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/category.js"></script>
<button id="statisticsButton" onclick="getStatisticsData()" style="visibility: hidden;">here</button>
<script type="text/javascript">
    function getStatisticsData() {
        $.ajax({
            type: 'GET',
            url: '/Chart/GetStatisticsData',
            success: function (result) {
                document.getElementById("totalFood").innerText=result['totalFood'];
                document.getElementById("totalCategory").innerText=result['totalCategory'];
                document.getElementById("FruitCount").innerText=result['FruitCount'];
                document.getElementById("Vegetables").innerText=result['Vegetables'];
                document.getElementById("totalStock").innerText=result['totalStock'];
                document.getElementById("Legumes").innerText=result['Legumes'];
                document.getElementById("MaxStockFood").innerText=result['MaxStockFood'];
                document.getElementById("MinStockFood").innerText=result['MinStockFood'];
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        })
    }

</script>